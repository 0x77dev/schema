{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["es2015"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "importHelpers": true,
    "sourceMap": true
  },
  "exclude": [
    "./examples",
    "./scripts",
    "./dist",
    "./src/__tests__",
    "./website"
  ]
}
